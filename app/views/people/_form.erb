<% if !@errors.blank? %>
  <p class="errors">
    <%= "#{@errors}" %>
  </p>
<% end %>
<form action="<%= people_form_action(@person) %>" method="post" id="<%= people_form_id(@person) %>" class="<%= people_form_class(@person) %>">
  <input type="hidden" name="_method" value="<%= people_form_method(@person) %>" />
  <div>
    <label for="first_name">First Name<br />
    <input type="text" name="first_name" value="<%= @person.first_name %>" /><br /></label>
  </div>
<br>
  <div>
    <label for="last_name">Last Name<br />  
    <input type="text" name="last_name" value="<%= @person.last_name %>" /><br /></label>
  </div>
  <br>
  
  <div>
    <label for="birthdate">Birthdate<br />
    <input name="birthdate" type="date" value="<%= @person.birthdate %>" /><br /></label>
  </div>
  <br>
  <br>
  <div>
    <input type="submit" name="submit" value="Submit" />
  </div>
</form>